{
	"name": "@fredfogerty/js-util",
	"version": "1.1.1",
	"description": "A universal set of typescript helpers for use on any platform.",
	"main": "index.js",
	"scripts": {
		"build": "rm -rf dist && tsc && babel dist -d dist",
		"build:watch": "tsc -w",
		"lint": "tslint 'src/**/*.ts{,x}' --type-check --format verbose --fix",
		"release:patch": "npm version patch && bash ./scripts/release.sh",
		"release:minor": "npm version minor && bash ./scripts/release.sh",
		"release:major": "npm version major && bash ./scripts/release.sh",
		"test": "npm run test:unit && npm run lint",
		"test:unit": "jest"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/frederickfogerty/js-util.git"
	},
	"author": "Frederick Fogerty",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/frederickfogerty/js-util/issues"
	},
	"homepage": "https://github.com/frederickfogerty/js-util#readme",
	"devDependencies": {
		"@types/jest": "^15.1.32",
		"babel-cli": "^6.18.0",
		"babel-core": "^6.18.0",
		"babel-preset-node6": "^11.0.0",
		"jest": "^16.0.2",
		"ts-jest": "^0.1.11",
		"tslint": "^4.3.1",
		"typescript": "^2.1.4",
		"ynp": "^2.9.0"
	},
	"jest": {
		"scriptPreprocessor": "<rootDir>/node_modules/ts-jest/preprocessor.js",
		"testPathDirs": [
			"src"
		],
		"testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js"
		]
	},
	"dependencies": {
		"@fredfogerty/tslint-config": "^3.0.0",
		"@types/chalk": "^0.4.31",
		"@types/loglevel": "^1.4.29",
		"@types/node": "^6.0.46",
		"@types/ramda": "^0.0.2",
		"chalk": "^1.1.3",
		"loglevel": "^1.4.1",
		"ramda": "^0.22.1"
	},
	"publishConfig": {
		"access": "public"
	}
}
